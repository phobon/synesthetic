{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/components/*": [
        "components/*"
      ],
      "@/components": [
        "components/index"
      ],
      "@/atoms": [
        "atoms/index"
      ],
      "@/hooks/*": [
        "hooks/*"
      ],
      "@/hooks": [
        "hooks/index"
      ],
      "@/api/*": [
        "pages/api/*"
      ],
      "@/api": [
        "pages/api/index"
      ],
      "@/materials": [
        "materials/index"
      ],
      "@/materials/*": [
        "materials/*"
      ]
    },
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
